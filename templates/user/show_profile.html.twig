{% extends 'base.html.twig' %}

{% block title %}Mon Compte{% endblock %}

{% block body %}

    <h1 class="text-center my-3">Gérer mon compte</h1>

    <div class="row">
        <div class="col-8 mx-auto">
            {% include 'include/_flashes.html.twig' %}
        </div>
    </div>

    <div class="row">
        <div class="col-10 mx-auto my-5">

            <div class="card text-center">
                <div class="card-header">
                    {{ app.user.fullname | title }}
                </div>
                <div class="card-body">
                    <h5 class="card-title">Total articles publiés: {{ articles | length }}</h5>
                    <p class="card-text">Mon email : {{ app.user.email }}</p>
                    <a href="#" class="btn btn-warning">Changer mon mot de passe</a>
                </div>
                <div class="card-footer text-muted">
                    Compte crée le : {{ app.user.createdAt | ago(locale='fr')}}
                </div>
            </div>

        </div>
    </div>

{% endblock %}